<resources>

    <!--BASIC THEMES-->

    <style name="Theme.WeatherUnderground.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:windowBackground">@drawable/background_default</item>
    </style>

    <style name="Theme.WeatherUnderground" parent="Theme.WeatherUnderground.Base">
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/svg_search</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/svg_close</item>
    </style>

    <style name="WeatherDetailViewStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="TextAppearance.CityExpandedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.CityCollapsedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
